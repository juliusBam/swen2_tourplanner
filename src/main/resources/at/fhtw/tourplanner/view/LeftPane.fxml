<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" minHeight="100.0" BorderPane.alignment="CENTER"
          xmlns="http://javafx.com/javafx/19" fx:controller="at.fhtw.tourplanner.view.LeftPaneController">
    <columnConstraints>
        <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="240.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="20.0"/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="NEVER"/>
        <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="40.0" vgrow="ALWAYS"/>
    </rowConstraints>
    <BorderPane.margin>
        <Insets left="5.0"/>
    </BorderPane.margin>
    <TextField fx:id="toursSearchTextInput" promptText="%Search_Tours_Placeholder" GridPane.columnSpan="3"/>
    <ToolBar minWidth="-Infinity" prefHeight="40.0" prefWidth="260.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <Label alignment="BASELINE_LEFT" text="%Common_Tours">
            <padding>
                <Insets right="20.0"/>
            </padding>
        </Label>
        <Button fx:id="addTourBtn" mnemonicParsing="false" onAction="#onButtonAdd" text="%Common_New"/>
        <Button fx:id="deleteTourBtn" mnemonicParsing="false" onAction="#onButtonDelete" text="%Common_Delete"/>
        <Button fx:id="editTourBtn" mnemonicParsing="false" onAction="#onButtonEdit" text="%Common_Edit"/>
    </ToolBar>
    <ListView fx:id="toursListView" minHeight="40.0" GridPane.columnSpan="3" GridPane.rowIndex="2"
              GridPane.vgrow="ALWAYS">
        <contextMenu>
            <ContextMenu>
                <items>
                    <MenuItem fx:id="cMenuNew" mnemonicParsing="false" text="%Common_New"/>
                    <MenuItem fx:id="cMenuDelete" mnemonicParsing="false" text="%Common_Delete"/>
                    <MenuItem fx:id="cMenuEdit" mnemonicParsing="false" text="%Common_Edit"/>
                </items>
            </ContextMenu>
        </contextMenu>
    </ListView>
    <ScrollBar orientation="VERTICAL" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
</GridPane>
